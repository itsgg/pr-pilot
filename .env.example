# PR-Pilot Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Anthropic API Key for Claude
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: GitHub Token for API access
# For GitHub Actions: GITHUB_TOKEN is provided automatically
# For local testing: Create a personal access token with repo permissions
GITHUB_TOKEN=your_github_token_here

# Optional: Dry run mode (set to 'true' to test without posting comments)
DRY_RUN=false

# Optional: Override configuration file path
CONFIG_PATH=config/agent.yaml

# Optional: Override PR number for testing
PR_NUMBER=

# Optional: Override repository (format: owner/repo)
REPOSITORY=

# Optional: Override GitHub API base URL (for GitHub Enterprise)
GITHUB_API_URL=https://api.github.com

# Optional: Override Anthropic API base URL
ANTHROPIC_API_URL=https://api.anthropic.com
